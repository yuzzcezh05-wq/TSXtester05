{
  "name": "dev-project-runner-enhanced",
  "version": "2.0.0",
  "description": "Enhanced Electron app for browsing and running development projects with automatic TSX support",
  "main": "main.js",
  "keywords": ["electron", "tsx", "react", "typescript", "project-runner", "development", "vite"],
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rm -rf node_modules dist",
    "setup": "npm install",
    "test": "echo \"Tests will be implemented in future versions\""
  },
  "build": {
    "appId": "com.devrunner.enhanced",
    "productName": "Dev Project Runner Enhanced",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/chokidar/**/*",
      "node_modules/tree-kill/**/*",
      "node_modules/portfinder/**/*",
      "node_modules/extract-zip/**/*"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "chokidar": "^3.5.3",
    "tree-kill": "^1.2.2",
    "portfinder": "^1.0.32",
    "extract-zip": "^2.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/dev-project-runner-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/dev-project-runner-enhanced/issues"
  },
  "homepage": "https://github.com/yourusername/dev-project-runner-enhanced#readme",
  "author": "Dev Project Runner Enhanced Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}